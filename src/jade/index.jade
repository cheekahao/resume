block project
  +section("project", true)
    each item in project
      li.timeline-item(class="experience-" + item.type)
        h3.timeline-title
          span.experience-place= item.place
          time.experience-time #{item.start} ~ #{item.end}
        dl.experience-description.timeline-content
          dt.experience-position= item.name
            if item.source_code
              a.experience-project-link(href= item.source_code)= dict.source_code
            if item.demo
              a.experience-project-link(href= item.demo)= dict.demo
            if item.online
              a.experience-project-link(href= item.online)= dict.online
          dd.experience-task= item.description



block skills
  +section("skills", true)
    each item in skills
      li.timeline-item(class="skills-" + item.type)
        h3.timeline-title
          span.skills-type= skill_type[item.type]
        +#{"skills_" + item.type}(item)


block links
    ul.links
      each link in links
        li.link
          a(href=link.url)= link_type[link.type]

