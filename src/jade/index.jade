extends ./layout/resume-layout.jade
include ./mixins/util.jade

block experience
  +section("experience", true)
    each item in experience
      if (item.type == "experience")
        li.timeline-item(class="education-" + item.stage)
          h3.timeline-title
            span.education-place= item.place
            time.education-time #{item.start} ~ #{item.end}
          dl.education-description.timeline-content
            dt.education-name= item.name
            dd.education-major= item.description
      else
        li.timeline-item(class="education-" + item.stage)
          h3.timeline-title
            time.education-time #{item.start} ~ #{item.end}
          .education-description.timeline-content
            .education-name= item.name
              span.education-degree= item.major + education_type[item.stage]
